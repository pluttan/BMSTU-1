program Project6;
{$APPTYPE CONSOLE}

uses
  SysUtils;

Type
 pakk = ^akk;
 akk = record
  name:string;
  pol:string;
  age:integer;
  next:pakk;
 end;

procedure vvivod (a:pakk);
 var
  b:pakk;
 begin
  b:=a;
  while b <> nil do
   begin
    writeln(b^.age, ' ', b^.pol);
    b:=b^.next;
   end;
  end;

procedure delete_element(var a:pakk; k:integer);
 var
  i:integer;
  b:pakk;
 begin
  b := a;
  i := 1;
  if k = 1 then
   a:=a^.next
  else
   begin
    while i < k-1 do
     begin
      i:=i+1;
      b:=b^.next;
     end;
    b^.next:=b^.next^.next;
   end;
  end;

var
 sr:single;
 d,i,k:integer;
 a,b:pakk;
begin
 randomize;
 a:=nil; b:=nil;
 new(a);
 b := a;
 for i := 1 to 5 do
  begin
   b^.name:='hal';
   d:=random(1);
   if d = 1 then
    b^.pol:='male'
   else
    b^.pol:='female';
   b^.age:=random(50)+1;
   new(b^.next);
   b:= b^.next;
  end;
 b^.name:='hal';
 d:=random(1);
 if d = 1 then
  b^.pol:='male'
 else
  b^.pol:='female';
 b^.age:=random(50)+1;
 b^.next := nil;
 vvivod(a);
 writeln;
 k := 1;
 delete_element(a,k);

  vvivod(a);

 readln;
end.
