program laba4;
{$APPTYPE CONSOLE}
uses
  SysUtils;

Var
  a:array[1..20] of integer;
  i,mini,maxi:integer;
  b,min,max:real;
 begin
  min:=101; max:=-1;
  Randomize;
   for i := 1 to 20 do
    a[i]:=random(54);
   for i := 1 to 20 do
    if a[i]<min then
     begin
      min:=a[i];
      mini:=i;
     end;
    if a[i]>max then
     begin
       max:=a;
       maxi:=i;
     end;
     writeln('maximalnoe znachenie',' ', max);
     writeln('minimalnoe znachenie',' ', min);
     readln;
 end.
